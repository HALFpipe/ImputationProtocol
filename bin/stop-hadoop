#!/usr/bin/env bash

VERBOSE=1

run_cmd() {
    cmd="$*"

    printf '%s\n' --------------------

    if [ "$VERBOSE" = "1" ]; then
	printf "$cmd\n"
    fi

    ( "$@" )

    EXIT_CODE=$?

    if [[ $EXIT_CODE -gt 0 ]]; then
	echo "ERROR: command exited with nonzero status $EXIT_CODE"
    fi

    printf '%s\n' --------------------

    return $EXIT_CODE
}

export HADOOP_PID_DIR=/data/hadoop/pids

for PID_FILE in ${HADOOP_PID_DIR}/hadoop-*.pid; do
    run_cmd "kill $(cat ${PID_FILE})"
done
